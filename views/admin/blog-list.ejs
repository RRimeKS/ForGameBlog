<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <h5 style="color:white; background:#DC3545; padding: 3px;" class="text-center">Toplam blog sayısı: <%= blogCount %></h5>
                    <tbody>
                        <% blogs.forEach(blog => { %>
                            <tr>
                                <td><%= blog.id %></td>
                                <td>
                                    <img style="width: 150px; border-radius: 30px;" src="/static/img/<%= blog.image %>" alt="<%= blog.image %>">
                                </td>
                                <td><%= blog.title %></td>
                                <td><% blog.categories.forEach(cat => { %>
                                   - | <%= cat.categoryName %> | -
                                <% }) %></td>
                                <td>
                                    <a href="/admin/blog/delete/<%= blog.id %>" class="btn btn-danger">Sil</a>
                                    <a href="/admin/blog/edit/<%= blog.id %>" class="btn btn-primary">Güncelle</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <%- include('../partials/script') %>
</body>
</html>