<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <% if (typeof message != "undefined" && message) { %>
                    <div class="alert alert-<%= message.class %>">
                        <%= message.text %>
                    </div>
                <% } %>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <h5 style="color:white; background:#DC3545; padding: 3px;" class="text-center">Toplam rol sayısı: <%= roleCount %></h5>
                    <tbody>
                        <% roles.forEach(role => { %>
                            <tr>
                                <td><%= role.id %></td>
                                <td><%= role.name %></td>                                
                                <td>
                                    <a href="/admin/role/delete/<%= role.id %>" class="btn btn-danger">Sil</a>
                                    <a href="/admin/role/edit/<%= role.id %>" class="btn btn-primary">Güncelle</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <%- include('../partials/script') %>
</body>
</html>