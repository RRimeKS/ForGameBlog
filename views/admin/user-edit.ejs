<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <style>
        .col { position: relative; }
        img { width: 100%; margin-top: 12px; max-height: 100px; object-fit: cover;}
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col bg-danger">
                <form method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="userid" value="<%= user.id %>">

                <div class="mb-3">
                    <label for="fullname" class="form-label">Ad - Soyad</label>
                    <input type="text" class="form-control" id="fullname" name="fullname" value="<%= user.fullname %>">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-posta</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
                </div>

                <div class="mb-3">
                    <% roles.forEach(role => { %>
                   <div class="form-check">                                                                                             
                        <input type="checkbox" name="roles[]" id="role_<%= role.id %>" value="<%= role.id %>" class="form-check-input" <%= user.roles.some(rol => rol.id == role.id) ? "checked" : "" %>>
                        <label for="role_<%= role.id %>" class="form-label"><%= role.name %></label>                       
                   </div>
                   <% }) %>
                </div>

                <div class="col-auto mb-3">
                    <button type="submit" class="btn btn-primary mt-3">GÃ¼ncelle</button>
                </div>
                
            </div>
        </div>
    </div>
    
    <%- include('../partials/script') %>
</body>
</html>